page {
  height: 100%;
}
.container {
  width: 100%;
  height: 100%;
  position: relative;
}
.container .center{
  padding-top: 10px;
  position: relative;
  float:left;
  width: 100%;
}
.allTrans{
  transition: all 0.01s;
}
.imageFill{
  width: 100%;
  height: 100%;
}
.circle{
  -webkit-border-radius: 1000px;
  -moz-border-radius: 1000px;
  border-radius: 1000px;
}
.Page_Padding{
  width: calc(100% - var(--pagePadding) - var(--pagePadding)) !important;
  padding-left: var(--pagePadding);
  padding-right: var(--pagePadding);
}
.Page_Margin{
  width: calc(100% - var(--pagePadding) - var(--pagePadding)) !important;
  margin-left: var(--pagePadding);
  margin-right: var(--pagePadding);
}
.Page_Margin_Padding{
  width: calc(100% - var(--pagePadding) - var(--pagePadding) - var(--pagePadding) - var(--pagePadding));
  margin-left: var(--pagePadding);
  margin-right: var(--pagePadding);
  padding-left: var(--pagePadding);
  padding-right: var(--pagePadding);
}

/*改变switch大小*/
.wx-switch-input{width:32px !important;height:10px !important;background:var(--primary) !important;border:0px !important;}
.wx-switch-input::before{width:31px !important;height: 10px !important;background:#ddd !important;}
.wx-switch-input::after{width: 18px !important;height: 18px !important;margin-top:-5px !important;margin-left: -5px !important;}


/*超出部分省略号*/
.overSpace{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.overTwoSpace{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
/*文本框占位字颜色*/
.textarea-placehoder,
.input-placehoder{
  color: #c7c7c7;
  font-size: 14px;
}

/*滑块视图容器*/
.Swiper{
  position: relative;
  height: auto;
  width: 100%;
}
.Swiper_Item{
  height: 100%;
  width: 100%;
}
.Swiper_Item_Scroll{
  height: 100%;
  width: 100%;
}

/*图片*/
.imgBody{
  position: relative;
  display: flex;
  flex-direction: column;
}
/*灰色*/
.Gray {
  filter: progid:DXImageTransform.Microsoft.BasicImage(grayscale=1);
  -webkit-filter: grayscale(100%);
}
/*hover*/
.Hover{
  background: var(--hoverColor) !important;
}
.Btn_Hover{
  opacity: 0.8;
}
/*浮动按钮*/
.Set_Fixed_Btn{
  width: 50px;
  height: 50px;
  position: fixed;
  bottom: 10px;
  right: 10px;
  border-radius: 50px;
  text-align: center;
  line-height: 50px;
  box-shadow: 0px 0px 10px #111111;
}
/*添加按钮*/
.Add_Fixed_Btn{
  width: 40px;
  height: 40px;
  position: fixed;
  bottom: 10px;
  text-align: center;
  left: 50%;
  transform: translate(-50%, 0);
  background: var(--mainColor);
  color: #fff;
  text-align: center;
  line-height: 40px;
  border-radius: 100px;
}
.Add_Fixed_Btn button{
  border-radius: 100px;
  width: 100%;
  height: 100%;
  border: 0px;
  line-height: 40px;
  padding: 0px;
  margin: 0px;
}

/**/
.Badge{
  width: 18px;
  height: 18px;
  position: absolute;
  background: #ff4730;
  color: #fff;
  -webkit-border-radius: 100px;
  -moz-border-radius: 100px;
  border-radius: 100px;
  text-align: center;
  line-height: 18px;
  font-size: 12px;
}

checkbox{
  transform: scale(0.7, 0.7);
}

/*按钮*/
.Btn{
  text-align: center;
  padding: 0px 10px;
  width: auto;
  font-size: 12px;
  height: 35px;
  line-height: 35px;
}
.Btn.Btn_Hover{
  opacity: 0.5;
}
.Btn.primary,
.Btn_Border_Hover{
  background: var(--mainColor) !important;
  color: #000 !important;
}
.Btn.common{
  background: var(--hoverColor);
  color: var(--h1Color);
}
.Btn.second{
  background: var(--secondColor);
  color: #fff;
}
.Btn.border{
  border: 1px solid var(--mainColor);
  color: var(--mainColor);
  background: #fff;
}

/*内容面板*/
.Comp_Panel{
  float: left;
  background: #fff !important;
  margin-bottom: 20px;
  border-radius: var(--radius);
  width: 100%;
  box-shadow: 0px 0px 2px 1px #eeeeee;
}
.Comp_Panel.NoShadow{
  box-shadow: 0px 0px 0px 0px;
}
.Comp_Btn{
  width: 100%;
  height: 40px;
  float: left;
  margin-bottom: 10px;
}
.Comp_Btn .Btn{
  width: 180px;
  margin: 0px auto;
}

/*底部菜单*/
.BottomBtn{
  width: calc(100% - 20px);
  height: 40px;
  background: var(--mainColor) !important;
  position: fixed;
  left: 10px;
  bottom: 10px;
  box-shadow: 0px 1px 2px #a8a8a8;
  z-index: 10;
  line-height: 40px;
  text-align: center;
  border-radius: var(--radius);
}
.BottomBtn.mini{
  font-size: 14px;
}
/*加粉账号*/
.Account_Icon:after{
  font-size: 24px;
}
.Account_Icon.wx:after{
  font-family:'iconfont';
  content: "\e685";
  color: #3a5dff;
}
.Account_Icon.pa:after{
  font-family:'iconfont';
  content: "\e64a";
  color: #41dc2c;
}
.Account_Icon.minipg:after{
  font-family:'iconfont';
  content: "\e6b4";
  color: #974dff;
}
.form_submit{
  width: 100%;
  height: 100%;
}
.form_body{
  width: 100%;
  height: 100%;
}
.form_btn{
  width: 100%;
  height: 0;
  margin: 0;
  padding: 0;
  border-radius: 0;
  position:absolute;
  top: 0;
  left: 0;
}
